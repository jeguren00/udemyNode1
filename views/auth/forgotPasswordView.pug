extends ../layout/index

block headerBlock
    .py-10
        h1.text-4xl.my10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina


        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.pc-4.shadow
                form.space-y-5(method="POST" action="/auth/restPassword")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text.xs(href="/auth/register") ¿No tienes Cuenta? Crea una
                        a.text-gray-500.text.xs(href="/auth/login") ¿Ya tienes Cuenta? Inicia Sessión 
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3" type="submit" value="Enviar Instrucciones")
                    