extends ../layout/index

block headerBlock
    .py-10
        h1.text-4xl.my10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina


        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.pc-4.shadow
                form.space-y-5(method="POST" noValidate)
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold New Password
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your new Password" type="password" name="password")
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3" type="submit" value="Save new password")
